{
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["supertest", "../path/to/your/app"]
      }
    ],
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": ["preRequest"]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "user"
      }
    ],
    "import/no-extraneous-dependencies": "off"
  }
}
